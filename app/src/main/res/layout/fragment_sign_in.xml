<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_signIn"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="111dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인" />

    <EditText
        android:id="@+id/password_signIn"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="240dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/email_signIn"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="175dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/confirm_signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="453dp" />

    <Button
        android:id="@+id/signUp_signIn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_signUp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="296dp" />

    <Button
        android:id="@+id/findPassword_singIn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_findPassword"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="344dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID\n(Email)"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="184dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="256dp" />

    <CheckBox
        android:id="@+id/saveID_signIn"
        android:layout_width="103dp"
        android:layout_height="41dp"
        android:text="아이디 저장"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="303dp" />

    <CheckBox
        android:id="@+id/autoSignIn_signIn"
        android:layout_width="122dp"
        android:layout_height="39dp"
        android:text="자동 로그인"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="346dp" />
</androidx.constraintlayout.widget.ConstraintLayout>