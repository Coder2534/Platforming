<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/tv_recyclerview_setting_icon"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_recyclerview_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_recyclerview_setting_icon"
        android:layout_centerInParent="true"
        android:text="test"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/tv_recyclerview_setting_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_recyclerview_setting_title"
        android:layout_alignLeft="@+id/tv_recyclerview_setting_title"
        android:text="description"/>

</RelativeLayout>