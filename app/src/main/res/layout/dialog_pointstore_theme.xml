<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테마"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_marginLeft="170dp"/>
        <TextView
            android:id="@+id/tv_pointstore_theme_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0포인트"
            android:textSize="25dp"
            android:gravity="right"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_pointstore_theme_pink"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:text="핑크테마"
            android:textColor="@color/red"
            android:backgroundTint="@color/pink"/>

        <Button
            android:id="@+id/btn_pointstore_theme_bule"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:textColor="@color/red"

            android:text="블루테마"
            android:backgroundTint="@color/bule"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_pointstore_theme_green"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:text="그린테마"
            android:backgroundTint="@color/darkgreen"/>
        <Button
            android:id="@+id/btn_pointstore_theme_black"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:text="다크테마"
            android:backgroundTint="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_pointstore_buytheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구매하기"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/btn_pointstore_savetheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장하기"
            android:layout_gravity="bottom"
            android:layout_marginLeft="150dp"/>

        <Button
            android:id="@+id/btn_pointstore_theme_getout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나가기"
            android:layout_gravity="bottom" />
    </LinearLayout>
</LinearLayout>