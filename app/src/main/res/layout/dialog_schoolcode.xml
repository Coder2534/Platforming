<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundColor">
    <TextView
        android:id="@+id/tv_schoolcode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학교코드를 입력해주세요."
        android:textSize="25dp"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/et_schoolcode_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_schoolcode_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="학교코드를 입력하세요."
        android:textSize="20dp" />
    <Button
        android:id="@+id/btn_schoolcode_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:layout_below="@+id/et_schoolcode_enter"
        android:layout_toLeftOf="@+id/btn_schoolcode_confirm"
        />
    <Button
        android:id="@+id/btn_schoolcode_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/et_schoolcode_enter"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>