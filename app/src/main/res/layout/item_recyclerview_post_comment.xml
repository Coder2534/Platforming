<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="2dp"
    android:background="@drawable/bg_more"
    android:backgroundTint="?attr/colorOnSecondary">

    <ImageView
        android:id="@+id/iv_noticeboard_comment_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_baseline_account_circle_24" />

    <TextView
        android:id="@+id/tv_noticeboard_comment_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_noticeboard_comment_profile"
        android:layout_toEndOf="@id/iv_noticeboard_comment_profile"
        android:maxLines="1"
        android:text="null"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_noticeboard_comment_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_noticeboard_comment_profile"
        android:layout_alignStart="@+id/iv_noticeboard_comment_profile"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:breakStrategy="balanced"
        android:text="대충 댓글이라는 글"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_noticeboard_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@id/tv_noticeboard_comment_comment"
        android:layout_alignStart="@+id/iv_noticeboard_comment_profile"
        android:layout_marginTop="5dp"
        android:text="08/11 21:22"
        android:textSize="15dp" />


    <ImageButton
        android:id="@+id/btn_noticeboard_comment_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="?attr/colorPrimary"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/ic_baseline_delete_outline_24"
        app:tint="#A2A2A2" />
</RelativeLayout>