<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_myinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibtn_myinfo_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="?attr/backgroundColor"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/tv_myinfo_uesrname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="이름"
                android:cursorVisible="false"
                android:maxLength="5"
                android:maxLines="1"
                android:ems="5"
                android:textSize="25sp"
                android:paddingStart="10dp"
                android:inputType="textPersonName"
                android:layout_marginTop="5dp" />

            <EditText
                android:id="@+id/et_myinfo_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="별명"
                android:cursorVisible="false"
                android:maxLength="6"
                android:maxLines="1"
                android:ems="6"
                android:textSize="25sp"
                android:paddingStart="10dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv_myinfo_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="0p"
                android:textSize="30dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:layout_below="@+id/ll_myinfo">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학반:"
                android:textSize="25dp"/>
            <EditText
                android:id="@+id/et_myinfo_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="예:1학년 1반 1번->10101"
                android:cursorVisible="false"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호:"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/et_myinfo_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="25dp"
                android:hint='"-"없이 입력해주세요.'
                android:cursorVisible="false"
                android:layout_marginLeft="5dp"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일:"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_myinfo_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_myinfo_revise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_myinfo_rivise"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="수정가능"
        android:textSize="35dp" />

    <Button
        android:id="@+id/btn_myinfo_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_myinfo_rivise"
        android:visibility="gone"
        android:text="완료"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btn_myinfo_rivise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:backgroundTint="?attr/colorPrimary"
        android:drawableLeft="@drawable/ic_baseline_edit_24"
        android:text="수정하기" />

</RelativeLayout>