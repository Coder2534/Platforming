<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundColor">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="폰트"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/tv_pointstore_font_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="0p"
            android:textSize="25dp"/>
    </RelativeLayout>



    <EditText
        android:id="@+id/et_pointstore_testtext"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:hint="텍스트를 시험해보세요."
        android:textSize="40dp"
        android:textColorHint="?attr/hintTextColor"
        android:typeface="normal"
        android:layout_margin="5dp"
        android:background="@drawable/bg_more"
        android:backgroundTint="?attr/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_pointstore_font_pyeong"
                android:layout_width="400dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="힘찬체"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:backgroundTint="?attr/colorPrimary"
                android:fontFamily="@font/power1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <Button
                android:id="@+id/btn_pointstore_font_vitorcore"
                android:layout_width="400dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="배민10년후체"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:backgroundTint="?attr/colorPrimary"
                android:fontFamily="@font/bmeuljiro10yearslate2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_pointstore_font_galmuri"
                android:layout_width="400dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="레트로샌즈"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/establishretrosans3"
                android:backgroundTint="?attr/colorPrimary"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <Button
                android:id="@+id/btn_pointstore_font_tokki"
                android:layout_width="400dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="을유1945"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/eulyoo1945regular4"
                android:backgroundTint="?attr/colorPrimary"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:text="*폰트: 50p" />

        <Button
            android:id="@+id/btn_pointstore_buyfont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/btn_pointstore_getout"
            android:layout_marginEnd="5dp"
            android:backgroundTint="?attr/colorPrimary"
            android:text="구매하기" />

        <Button
            android:id="@+id/btn_pointstore_getout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:backgroundTint="?attr/colorPrimary"
            android:text="나가기" />
    </RelativeLayout>

</LinearLayout>