<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        android:key="notification"
        android:title="알림"
        android:summary="자가진단, 오늘의 급식, 공지, 게시물"
        android:icon="@drawable/ic_baseline_notifications_24"
        app:fragment="com.android.platforming.fragment.NotificationPreferenceFragment">
    </Preference>

    <PreferenceScreen
        android:title="디자인"
        android:summary="테마, 폰트"
        android:icon="@drawable/ic_baseline_palette_24">
    </PreferenceScreen>

    <Preference
        android:title="계정"
        android:summary="이메일, 비밀번호 변경, 로그아웃 등"
        android:icon="@drawable/ic_baseline_account_circle_24"
        app:fragment="com.android.platforming.fragment.AccountPreferenceFragment">
    </Preference>

    <PreferenceScreen
        android:title="소프트웨어 버전"
        android:summary="1.0"
        android:icon="@drawable/ic_baseline_phone_android_24">
    </PreferenceScreen>

</PreferenceScreen>