<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="PinkTheme">
        <item name="android:textColor">#FFD8D8</item>
        <item name="android:colorPrimary">#FF8FB1</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:statusBarColor" tools:targetApi="l">#FF8FB1</item>
    </style>
    <style name="BuleTheme">
        <item name="android:textColor">#D4F4FA</item>
        <item name="android:colorPrimary">#90D8F0</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:statusBarColor" tools:targetApi="l">#90D8F0</item>
    </style>
    <style name="GreenTheme">
        <item name="android:textColor">#598A6A</item>
        <item name="android:colorPrimary">#63A479</item>
        <item name="android:statusBarColor" tools:targetApi="l">#63A479</item>
    </style>

    <style name="BlackTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColorHighlight">#FFFFFF</item>
        <item name="colorPrimary">#373737</item>
        <item name="colorPrimaryDark">#313131</item>
        <item name="colorAccent">#000000</item>
        <item name="colorControlHighlight">#828382</item>
        <item name="colorControlActivated">#828382</item>
        <item name="android:navigationBarColor">#404040</item>
        <item name="android:statusBarColor">#404040</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundColor">#313131</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="buttonStyle">?attr/materialButtonOutlinedStyle</item>

    </style>

    <style name="SlowFont">
        <item name="android:fontFamily">@font/nanum_handwriting_slow1</item>
    </style>
    <style name="AgainFont">
        <item name="android:fontFamily">@font/nanum_handwriting_again2</item>
    </style>
</resources>